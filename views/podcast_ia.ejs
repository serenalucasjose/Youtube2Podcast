            color: #a855f7;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: rgba(255, 255, 255, 0.5);
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
            color: currentColor;
        }
        
        
        /* Light mode adjustments */
        html:not(.dark) .podcast-card {
            background: linear-gradient(145deg, rgba(168, 85, 247, 0.08) 0%, rgba(139, 92, 246, 0.03) 100%);
        }
        
        html:not(.dark) .podcast-meta {
