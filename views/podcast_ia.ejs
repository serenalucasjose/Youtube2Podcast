    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>
    <style>
        .podcast-card {
            background: linear-gradient(145deg, rgba(168, 85, 247, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
            border: 1px solid rgba(168, 85, 247, 0.2);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .podcast-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(168, 85, 247, 0.15);
        }
        
        .podcast-card.processing {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        .podcast-header {
            background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .podcast-icon {
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .podcast-title {
            flex: 1;
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
        }
        
        .podcast-body {
            padding: 1.5rem;
        }
        
        .podcast-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
        }
        
        .podcast-meta span {
            display: flex;
            align-items: center;
            gap: 0.35rem;
        }
        
        .podcast-actions {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }
        
        .podcast-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.6rem 1rem;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
        }
        
        .podcast-btn.primary {
            background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
            color: white;
        }
        
        .podcast-btn.primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(168, 85, 247, 0.3);
        }
        
        .podcast-btn.secondary {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .podcast-btn.secondary:hover {
            background: rgba(255, 255, 255, 0.15);
            color: white;
        }
        
        .podcast-btn.danger {
            background: rgba(239, 68, 68, 0.15);
            color: #f87171;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }
        
        .podcast-btn.danger:hover {
            background: rgba(239, 68, 68, 0.25);
        }
        
        .generate-card {
            background: linear-gradient(145deg, rgba(34, 197, 94, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
            border: 2px dashed rgba(34, 197, 94, 0.3);
            border-radius: 16px;
            padding: 2rem;
            text-align: center;
        }
        
        .generate-card h3 {
            color: #22c55e;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        
        .generate-card p {
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }
        
        .generate-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .generate-form select,
        .generate-form button {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
        }
        
        .generate-form select {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
        }
        
        .generate-form select:focus {
            outline: none;
            border-color: #22c55e;
        }
        
        .generate-form button {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .generate-form button:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
        }
        
        .generate-form button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            padding: 0.35rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .status-badge.ready { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
        .status-badge.processing { background: rgba(234, 179, 8, 0.15); color: #eab308; }
        .status-badge.error { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
        
        .quota-info {
            text-align: center;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.6);
        }
        
