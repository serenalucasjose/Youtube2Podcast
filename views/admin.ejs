<script>
    // Mobile Menu Toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const sidebar = document.querySelector('.admin-sidebar');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    
    function openSidebar() {
        sidebar.classList.add('open');
        sidebarOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
    }
    
    function closeSidebar() {
        sidebar.classList.remove('open');
        sidebarOverlay.classList.remove('active');
        document.body.style.overflow = '';
    }
    
    mobileMenuBtn.addEventListener('click', openSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);
    
    // Tab Navigation
    const navItems = document.querySelectorAll('.nav-item[data-tab]');
    const tabContents = document.querySelectorAll('.tab-content');
    const headerTitle = document.getElementById('header-title');
    
    const tabTitles = {
        'dashboard': 'Dashboard',
        'episodes': 'Gestión de Episodios',
        'users': 'Gestión de Usuarios',
        'feeds': 'RSS Feeds',
        'podcasts-ia': 'Podcasts IA',
        'danger': 'Zona de Peligro'
    };
    
    navItems.forEach(item => {
        item.addEventListener('click', (e) => {
            e.preventDefault();
            const tab = item.dataset.tab;
            
            // Update nav active state
            navItems.forEach(n => n.classList.remove('active'));
            item.classList.add('active');
            
            // Show corresponding tab content
            tabContents.forEach(t => t.classList.remove('active'));
            document.getElementById('tab-' + tab).classList.add('active');
            
            // Update header title
            headerTitle.textContent = tabTitles[tab] || 'Dashboard';
            
            // Close sidebar on mobile after selecting tab
            closeSidebar();
        });
    });
    
    // Theme Toggle
    const themeToggleBtn = document.getElementById('theme-toggle-btn');
    const themeIconDark = document.getElementById('theme-icon-dark');
    const themeIconLight = document.getElementById('theme-icon-light');

    function updateThemeIcons() {
        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
            themeIconDark.classList.remove('hidden');
            themeIconLight.classList.add('hidden');
        } else {
            themeIconDark.classList.add('hidden');
            themeIconLight.classList.remove('hidden');
        }
    }

    updateThemeIcons();

    themeToggleBtn.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        updateThemeIcons();
        // Update chart colors
        if (typeof updateChartTheme === 'function') {
            updateChartTheme();
        }
    });
    
    // Transcription Modal
    let currentEpisodeId = null;
    
    function openTranscribeModal(episodeId, title) {
        currentEpisodeId = episodeId;
        document.getElementById('modal-episode-title').textContent = title;
        document.getElementById('transcribe-modal').classList.add('active');
    }
    
    function closeTranscribeModal() {
        document.getElementById('transcribe-modal').classList.remove('active');
        currentEpisodeId = null;
    }
    
    document.getElementById('modal-confirm-btn').addEventListener('click', async () => {
        if (!currentEpisodeId) return;
        
        const language = document.getElementById('modal-language').value;
        const btn = document.getElementById('modal-confirm-btn');
        
        btn.disabled = true;
        btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Iniciando...';
        
        try {
            const response = await fetch(`/admin/episodes/${currentEpisodeId}/transcribe`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ language })
            });
            
            const data = await response.json();
            
            if (data.success) {
                closeTranscribeModal();
                // Update the row status
                const row = document.querySelector(`tr[data-episode-id="${currentEpisodeId}"]`);
                if (row) {
                    const transcriptionCell = row.querySelectorAll('td')[4];
                    if (transcriptionCell) {
                        transcriptionCell.innerHTML = '<span class="status-badge processing"><i class="bi bi-circle-fill"></i> ...</span>';
                    }
                }
                alert(data.message);
            } else {
                alert('Error: ' + (data.error || 'Error desconocido'));
            }
        } catch (err) {
            alert('Error de conexión: ' + err.message);
        } finally {
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-play-fill"></i> Iniciar Transcripción';
        }
    });
    
    // Close modal on overlay click
    document.getElementById('transcribe-modal').addEventListener('click', (e) => {
        if (e.target.classList.contains('modal-overlay')) {
            closeTranscribeModal();
        }
    });
    
    // Chart.js - Episodes per day
    const episodesData = <%- JSON.stringify(stats.episodesPerDay) %>;
    
    // Generate last 7 days labels
    const last7Days = [];
    for (let i = 6; i >= 0; i--) {
        const d = new Date();
        d.setDate(d.getDate() - i);
        last7Days.push(d.toISOString().split('T')[0]);
    }
    
    // Map data to labels
    const chartData = last7Days.map(date => {
        const found = episodesData.find(d => d.date === date);
        return found ? found.count : 0;
    });
    
    const chartLabels = last7Days.map(date => {
        const d = new Date(date);
        return d.toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric' });
    });
    
    const ctx = document.getElementById('episodesChart').getContext('2d');
    
    // Get theme-aware colors
    const isDarkMode = () => document.documentElement.classList.contains('dark');
    const getTickColor = () => isDarkMode() ? 'rgba(255,255,255,0.4)' : 'rgba(0,0,0,0.5)';
    const getGridColor = () => isDarkMode() ? 'rgba(255,255,255,0.05)' : 'rgba(0,0,0,0.08)';
    
    const episodesChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: chartLabels,
            datasets: [{
                label: 'Episodios',
                data: chartData,
                backgroundColor: 'rgba(78, 205, 196, 0.6)',
                borderColor: 'rgba(78, 205, 196, 1)',
                borderWidth: 1,
                borderRadius: 6,
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1,
                        color: getTickColor()
                    },
                    grid: {
                        color: getGridColor()
                    }
                },
                x: {
                    ticks: {
                        color: getTickColor()
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
    
    // Update chart colors when theme changes
    function updateChartTheme() {
        episodesChart.options.scales.y.ticks.color = getTickColor();
        episodesChart.options.scales.y.grid.color = getGridColor();
        episodesChart.options.scales.x.ticks.color = getTickColor();
        episodesChart.update();
    }
    
    // ===============================
    // RSS FEEDS & PODCASTS IA MANAGEMENT
    // ===============================
    
    let feedsData = { feeds: [], categories: [], generatedPodcasts: [] };
    
    // Load feeds and podcasts data
    async function loadFeeds() {
        try {
            const response = await fetch('/admin/feeds');
            if (!response.ok) throw new Error('Error loading feeds');
            
            feedsData = await response.json();
            renderFeedsTable();
            renderPodcastsTable();
        } catch (error) {
            console.error('Error loading feeds:', error);
        }
    }
    
    // Render feeds table
    function renderFeedsTable() {
        const tbody = document.getElementById('feeds-table-body');
        const countBadge = document.getElementById('feeds-count');
        
        countBadge.textContent = feedsData.feeds.length;
        
        if (feedsData.feeds.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="5" style="text-align: center; color: var(--text-muted); padding: 2rem;">
                        No hay feeds configurados. Agrega uno arriba.
                    </td>
                </tr>
            `;
            return;
        }
        
        tbody.innerHTML = feedsData.feeds.map(feed => `
            <tr>
                <td style="font-weight: 500; color: var(--text-primary);">${escapeHtml(feed.name)}</td>
                <td>
                    <span class="status-badge ready">${escapeHtml(feed.category)}</span>
                </td>
                <td>${feed.language === 'es' ? '🇪🇸 ES' : '🇬🇧 EN'}</td>
                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                    <a href="${escapeHtml(feed.url)}" target="_blank" style="color: var(--accent-teal);">
                        ${escapeHtml(feed.url)}
                    </a>
                </td>
                <td>
                    <button class="action-btn delete" title="Eliminar" onclick="deleteFeed(${feed.id})">
                        <i class="bi bi-trash3"></i>
                    </button>
                </td>
            </tr>
        `).join('');
    }
    
    // Render podcasts table
    function renderPodcastsTable() {
        const tbody = document.getElementById('podcasts-table-body');
        const countBadge = document.getElementById('podcasts-count');
        
        countBadge.textContent = feedsData.generatedPodcasts.length;
        
        if (feedsData.generatedPodcasts.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" style="text-align: center; color: var(--text-muted); padding: 2rem;">
                        No hay podcasts IA generados aún.
                    </td>
                </tr>
            `;
            return;
        }
        
        tbody.innerHTML = feedsData.generatedPodcasts.map(podcast => `
            <tr>
                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; font-weight: 500; color: var(--text-primary);" title="${escapeHtml(podcast.title)}">
                    ${escapeHtml(podcast.title)}
                </td>
                <td>${escapeHtml(podcast.owner_username || 'N/A')}</td>
                <td>
                    <span class="status-badge ready">${escapeHtml(podcast.topic)}</span>
                </td>
                <td>
                    <span class="status-badge ${podcast.status}">
                        <i class="bi bi-circle-fill"></i>
                        ${podcast.status === 'ready' ? 'Listo' : (podcast.status === 'error' ? 'Error' : 'Procesando')}
                    </span>
                </td>
                <td style="color: var(--text-muted);">${new Date(podcast.created_at).toLocaleDateString()}</td>
                <td>
                    <button class="action-btn delete" title="Eliminar" onclick="deletePodcast(${podcast.id})">
                        <i class="bi bi-trash3"></i>
                    </button>
                </td>
            </tr>
        `).join('');
    }
    
    // Escape HTML for security
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text || '';
        return div.innerHTML;
    }
    
    // Add feed form submission
    document.getElementById('add-feed-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const data = {
            name: formData.get('name'),
            url: formData.get('url'),
            category: formData.get('category'),
            language: formData.get('language')
        };
        
        try {
            const response = await fetch('/admin/feeds', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (response.ok) {
                e.target.reset();
                loadFeeds();
                alert('Feed agregado correctamente');
            } else {
                alert('Error: ' + (result.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error adding feed:', error);
            alert('Error de conexión');
        }
    });
    
    // Delete feed
    async function deleteFeed(id) {
        if (!confirm('¿Eliminar este feed?')) return;
        
        try {
            const response = await fetch(`/admin/feeds/delete/${id}`, {
                method: 'POST'
            });
            
            if (response.ok) {
                loadFeeds();
            } else {
                const result = await response.json();
                alert('Error: ' + (result.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error deleting feed:', error);
            alert('Error de conexión');
        }
    }
    
    // Delete podcast
    async function deletePodcast(id) {
        if (!confirm('¿Eliminar este podcast IA?')) return;
        
        try {
            const response = await fetch(`/admin/podcasts/delete/${id}`, {
                method: 'POST'
            });
            
            if (response.ok) {
                loadFeeds();
            } else {
                const result = await response.json();
                alert('Error: ' + (result.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error deleting podcast:', error);
            alert('Error de conexión');
        }
    }
    
    // Load feeds when switching to feeds or podcasts-ia tab
    navItems.forEach(item => {
        item.addEventListener('click', () => {
            const tab = item.dataset.tab;
            if (tab === 'feeds' || tab === 'podcasts-ia') {
                loadFeeds();
            }
        });
    });
</script>
</body>
